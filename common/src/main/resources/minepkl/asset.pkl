// Any generated assets will be defined here
assets {
  // For example, we generate a lang/en_us.json file inside of the mymod namespace
  ["mymod:lang/en_us"] {
    ["item.mymod.some_item"] = "My custom item name"
  }
}

// Since most of Minecraft resources are written in JSON, we
// use the JsonRenderer provided by the pkl stdlib
const jsonRenderer = new JsonRenderer {}

// See: https://pkl-lang.org/main/current/language-reference/index.html#module-output
output {
  files {
    for (location, contents in assets) {
      [location] {
        value = contents
        renderer = jsonRenderer
      }
    }
  }
}