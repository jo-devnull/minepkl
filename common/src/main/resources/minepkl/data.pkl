// We define our data files here (recipes, tags, etc...)
data {
  ["some_mod:recipes/my_custom_recipe"] {
    type = "minecraft:crafting_shapeless"

    ingredients {
      new { item = "minecraft:apple" }
      new { item = "some_mod:some_item" }
    }

    result {
      item = "some_mod:another_item"
    }
  }

  ["some_mod:tags/item/my_custom_tag"] {
    values {
      "minecraft:stick"
      "minecraft:apple"
      "minecraft:diamond"
    }
  }
}

// Since most of Minecraft resources are written in JSON, we
// use the JsonRenderer provided by the pkl stdlib
const jsonRenderer = new JsonRenderer {}

// See: https://pkl-lang.org/main/current/language-reference/index.html#module-output
output {
  files {
    for (location, contents in data) {
      [location] {
        value = contents
        renderer = jsonRenderer
      }
    }
  }
}